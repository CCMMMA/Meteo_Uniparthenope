<Page class="page"
      navigatingTo="onNavigatingTo"
      actionBarHidden="false"
      xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:accordion="nativescript-accordion">

    <ActionBar class="blue_background_action_bar">
        <Label class="" text="Bollettino" fontSize="20"></Label>
    </ActionBar>

    <StackLayout>
        <ScrollView height="100%">
            <accordion:Accordion  items="{{items}}" allowMultiple="false" height="100%">
                <accordion:Accordion.itemHeaderTemplate>
                    <StackLayout horizontalAlignment="center" verticalAlignment="bottom" class="blue_background_report">
                        <Label text="{{title}}" horizontalAlignment="center" textWrap="true" margin="5 5 5 5"/>
                        <Label text="{{date_text}}" fontSize="11" margin="5 5 5 5"/>
                    </StackLayout>
                </accordion:Accordion.itemHeaderTemplate>

                <accordion:Accordion.itemContentTemplate>
                    <StackLayout>
                        <HtmlView html="{{ desc }}" color="#009432"></HtmlView>
                    </StackLayout>
                </accordion:Accordion.itemContentTemplate>
            </accordion:Accordion>
        </ScrollView>

    </StackLayout>
</Page>
